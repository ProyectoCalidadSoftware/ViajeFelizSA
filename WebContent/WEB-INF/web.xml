<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1"
 xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
 <display-name>ViajeFelizSA</display-name>
 <servlet>
  <servlet-name>RegistroUsuarios</servlet-name>
  <servlet-class>servlets.RegistroUsuarios</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>Publicar</servlet-name>
  <servlet-class>servlets.Publicar</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>BuscarAlojamiento</servlet-name>
  <servlet-class>servlets.BuscarAlojamiento</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>RegistroUsuarios</servlet-name>
  <url-pattern>/registro</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>Publicar</servlet-name>
  <url-pattern>/publicar</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>BuscarAlojamiento</servlet-name>
  <url-pattern>/buscar</url-pattern>
 </servlet-mapping>
 <security-constraint>
  <display-name>Example Security Constraint</display-name>
  <web-resource-collection>
   <web-resource-name>Area de Admin</web-resource-name>
   <url-pattern>/usuario/*</url-pattern>
   <http-method>DELETE</http-method>
   <http-method>GET</http-method>
   <http-method>POST</http-method>
   <http-method>PUT</http-method>
  </web-resource-collection>
  <auth-constraint>
   <role-name>ADMIN</role-name>
   <role-name>VISITANTE</role-name>
  </auth-constraint>
  <user-data-constraint>
   <transport-guarantee>NONE</transport-guarantee>
  </user-data-constraint>
 </security-constraint>
 <security-constraint>
  <display-name>Example Security Constraint</display-name>
  <web-resource-collection>
   <web-resource-name>Area de Admin</web-resource-name>
   <url-pattern>/admin/*</url-pattern>
   <http-method>DELETE</http-method>
   <http-method>GET</http-method>
   <http-method>POST</http-method>
   <http-method>PUT</http-method>
  </web-resource-collection>
  <auth-constraint>
   <role-name>ADMIN</role-name>
  </auth-constraint>
  <user-data-constraint>
   <transport-guarantee>NONE</transport-guarantee>
  </user-data-constraint>
 </security-constraint>
 <security-constraint>
  <display-name>Example Security Constraint</display-name>
  <web-resource-collection>
   <web-resource-name>Area de estudiante</web-resource-name>
   <url-pattern>/estudiante/*</url-pattern>
   <http-method>DELETE</http-method>
   <http-method>POST</http-method>
   <http-method>GET</http-method>
   <http-method>PUT</http-method>
  </web-resource-collection>
  <auth-constraint>
   <role-name>VISITANTE</role-name>
  </auth-constraint>
  <user-data-constraint>
   <transport-guarantee>NONE</transport-guarantee>
  </user-data-constraint>
 </security-constraint>
 <login-config>
  <auth-method>FORM</auth-method>
  <realm-name>red</realm-name>
  <form-login-config>
   <form-login-page>/login.jsp</form-login-page>
   <form-error-page>/error.jsp</form-error-page>
  </form-login-config>
 </login-config>
 <security-role>
  <description>A user</description>
  <role-name>ADMIN</role-name>
 </security-role>
</web-app>
